# =============================================================================
# DATABASE
# =============================================================================

# Database connection strings for Prisma
# Connect to Supabase via connection pooling (for application queries)
DATABASE_URL="postgresql://user:password@host:6543/postgres?pgbouncer=true&connection_limit=1"

# Direct connection to the database (for migrations)
DIRECT_URL="postgresql://user:password@host:5432/postgres"

# =============================================================================
# SUPABASE
# =============================================================================

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"

# Supabase anonymous (public) key
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Supabase service role key (server-side only, never expose to client)
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================

# Secret key for encrypting backup files (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# This should be a 64-character hex string (32 bytes)
BACKUP_ENCRYPTION_SECRET="your-64-char-hex-string-here"

# =============================================================================
# CRON JOBS
# =============================================================================

# Secret for authenticating cron job requests (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# This protects your cron endpoints from unauthorized access
CRON_SECRET="your-64-char-hex-string-here"

# =============================================================================
# AI SERVICES (OPTIONAL)
# =============================================================================

# OpenAI API key for AI features
OPENAI_API_KEY="sk-..."

# Anthropic API key for Claude
ANTHROPIC_API_KEY="sk-ant-..."

# =============================================================================
# AUTHENTICATION (OPTIONAL)
# =============================================================================

# Google OAuth credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Microsoft OAuth credentials
MICROSOFT_CLIENT_ID="your-microsoft-client-id"
MICROSOFT_CLIENT_SECRET="your-microsoft-client-secret"

# =============================================================================
# PAYMENT (OPTIONAL)
# =============================================================================

# Stripe API keys
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# =============================================================================
# EMAIL (OPTIONAL)
# =============================================================================

# SendGrid API key
SENDGRID_API_KEY="SG..."

# SMTP configuration
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASSWORD="your-smtp-password"

# =============================================================================
# STORAGE (OPTIONAL)
# =============================================================================

# AWS S3 credentials (if using S3 for backups instead of Supabase Storage)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BACKUP_BUCKET="your-backup-bucket"

# =============================================================================
# APPLICATION
# =============================================================================

# Next.js environment
NODE_ENV="development"

# Application URL (for callbacks, webhooks, etc.)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# =============================================================================
# SECURITY
# =============================================================================

# JWT secret for session tokens (if not using Supabase Auth)
JWT_SECRET="your-jwt-secret"

# Cookie encryption key
COOKIE_SECRET="your-cookie-secret"

# =============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN="https://..."

# Google Analytics tracking ID
NEXT_PUBLIC_GA_TRACKING_ID="G-..."

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_BACKUPS="true"
ENABLE_CONFLICT_CHECKING="true"
ENABLE_AI_CHAT="true"
ENABLE_SPEAKER_DIARIZATION="true"
ENABLE_PII_REDACTION="true"
