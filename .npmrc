# Allow build scripts for essential packages
enable-pre-post-scripts=true

# Explicitly allow these packages to run build scripts
# Prisma - Required for generating Prisma Client
@prisma:client:enable-scripts=true
@prisma:engines:enable-scripts=true
prisma:enable-scripts=true

# Native modules that need compilation
sharp:enable-scripts=true
bcrypt:enable-scripts=true
esbuild:enable-scripts=true

# Optional: Only enable if you're using these features
# puppeteer:enable-scripts=true
# protobufjs:enable-scripts=true
